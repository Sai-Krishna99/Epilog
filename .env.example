# Epilog Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED
# =============================================================================

# Database connection string (for local development without Docker)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/epilog

# Google API Key for Gemini diagnosis
# Get one at: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-api-key-here

# =============================================================================
# OPTIONAL
# =============================================================================

# Path to the project being debugged (for patch application)
# This is the root directory of the agent code Epilog should patch
EPILOG_PROJECT_PATH=/path/to/your/agent/project

# Gemini model for diagnosis (default: gemini-2.0-flash)
EPILOG_DIAGNOSIS_MODEL=gemini-2.0-flash

# Gemini model for patch generation (default: same as diagnosis model)
EPILOG_PATCH_MODEL=gemini-2.0-flash
